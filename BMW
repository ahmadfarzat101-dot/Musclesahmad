local function equipSeven(petName)
   for i = 1,7 do
      RE.equipPetEvent:FireServer(petName)
   end
end

local function getTool()
   local ch = LP.Character
   if not ch then return nil end
   return ch:FindFirstChildOfClass("Tool")
end

